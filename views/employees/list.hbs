<div>
    <a class="btn btn-secondary" href="/employees"><i class="fa fa-list-plus"></i>CREATE NEW</a>
    
    <h3 align="center">View Employee List</h3>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Employee Profession</th>
            <th>Employee Salary</th>
            <th>Edit</th>
            <th>Delete</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr align="centre">
            <td>{{this.employeesId}}</td>
            <td>{{this.employeesName}}</td>
            <td>{{this.employeesprofession}}</td>
            <td>{{this.employeesSalary}}</td>
            
            <td>
                <td><a href="/employees/edit/{{this._id}}" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a></td>
                <a href="/employees/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
